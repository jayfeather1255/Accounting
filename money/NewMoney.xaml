<UserControl x:Class="money.NewMoney"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:money"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Height="50">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="70"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" Foreground="Gainsboro" BorderThickness="0">5/16</TextBox>

        <TextBox Grid.Column="1" FontSize="20" Foreground="Gray" VerticalAlignment="Center" BorderThickness="0">購買物品</TextBox>

        <TextBox Grid.Column="2" FontSize="20" Foreground="DarkTurquoise" VerticalAlignment="Center" BorderThickness="0">金額</TextBox>
    </Grid>
</UserControl>
